@page "/createcustomer"
@using RepairShop.Shared.DTOs
@inject HttpClient http;

<h3>CreateCustomer</h3>
 
<EditForm Model="addCustomerDto" OnSubmit="AddCustomer" class="card card-body bg-light mt-5">
    <div class="form-group row">
        <label for="name" class="col-md-2 col-form-label">Name:</label>
        <div class="col-md-10">
            <InputText id="name" class="form-control" @bind-Value="addCustomerDto.Name" />
        </div>
    </div>
    <div class="form-group row">
        <label for="supplier" class="col-md-2 col-form-label">Failure:</label>
        <div class="col-md-10">
            <InputText id="supplier" class="form-control" @bind-Value="addCustomerDto.Failure" />
        </div>
    </div>
    
    <div class="form-group row">
        <label for="phonenumber" class="col-md-2 col-form-label">Phone:</label>
        <div class="col-md-10">
            <InputText id="phonenumber" class="form-control" @bind-Value="addCustomerDto.PhoneNumber" />
        </div>
    </div>
    
    <div class="form-group row">
        <label for="image" class="col-md-2 col-form-label">TvBrand:</label>
        <div class="col-md-10">
            <InputText id="image" class="form-control" @bind-Value="addCustomerDto.TvBrand" />
        </div>
    </div>
    <div class="form-group row">
        <label for="image" class="col-md-2 col-form-label">TvInch:</label>
        <div class="col-md-10">
            <InputNumber id="image" class="form-control" @bind-Value="addCustomerDto.TvInch" />
        </div>
    </div>    
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </div>
</EditForm>

@code {
    private AddCustomerDto addCustomerDto { get; set; }
    
    protected override void OnInitialized()
    {
        addCustomerDto = new AddCustomerDto();
        addCustomerDto.DateIn=DateTime.Today;
        
    }

    private void AddCustomer()
    {
        http.PostAsJsonAsync("/api/customerdata", addCustomerDto);
        Console.WriteLine(addCustomerDto);
    }
}
